{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "CLang",
	"scopeName": "source.clang",
	"patterns": [
		{
			"name": "comment.line.double-slash.clang", 
			"match": "//.*$"
		},
		{
			"name": "comment.block.clang",
			"begin": "/\\*",
			"end": "\\*/"
		},
		{
			"name": "constant.numeric.clang",
			"match": "\\b[0-9\\.]+\\b"
		},
		{
			"name": "keyword.control.clang",
			"match": "\\b(if|else|elif|while|for|in|return|point)\\b"
		},
		{
			"name": "keyword.other.clang",
			"match": "\\b(var|def|struct|new|true|false)\\b"
		},
		{
			"name": "support.function.clang",
			"match": "\\b(clear|print|input|parse)\\b"
		},
		{
			"name": "variable.language.clang",
			"match": "\\$[a-zA-Z_][a-zA-Z0-9_]*\\$",
			"captures": {
				"0": {
					"name": "variable.clang"
				}
			}
		},
		{
			"name": "variable.clang",
			"match": "\\$(.*?)\\$"
		},
		{
			"name": "string.quoted.double.clang",
			"begin": "\"",
			"end": "\"",
			"patterns": [
			  {
				"name": "variable.clang",
				"begin": "\\$",
				"end": "\\$"
			  },
			  {
				"name": "constant.character.escape.clang",
				"match": "\\\\."
			  }
			]
		},
		{
		  "name": "support.class.clang",
		  "match": "\\bstruct\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\b",
		  "captures": {
			"1": {
			  "name": "entity.name.type.clang"
			}
		  }
		},
		{
			"name": "variable-assignment.clang",
			"match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b\\s*(?=[+\\-*/\\=\\.in])",
			"captures": {
				"1": {
					"name": "variable.clang"
				}
			}
		},
		{
			"name": "support.function.clang",
			"match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b"
		}
	]
}
